	$(MAKE) -C lib/addons/library.xbmc.addon
	$(MAKE) -C lib/addons/library.xbmc.codec
	$(MAKE) -C lib/addons/library.xbmc.gui
	$(MAKE) -C lib/addons/library.xbmc.pvr
